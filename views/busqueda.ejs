<!DOCTYPE html>
<html>
  <head>
    <title>Buscar cita</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      * {
        font-size: 1.2rem;
      }
    </style>
  </head>
  <body class="bg-light">
    <a href="/" class="btn btn-link mt-4">Volver</a>
    <div class="container py-5">
      <!-- Los datos de usuario se muestran usando <%= ... %> para evitar XSS -->
      <h1 class="mb-4 text-success">Resultados para "<%= autor %>"</h1>
      <ul class="list-group">
        <% resultados.forEach(function(comentario) { %>
        <li class="list-group-item">
          <strong><%= comentario.autor %>:</strong> <%= comentario.contenido %>
        </li>
        <% }); %>
      </ul>
      <a href="/" class="btn btn-link mt-4">Volver</a>
    </div>
  </body>
</html>
