<!DOCTYPE html>
<html>
  <head>
    <title>Citas autores</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      * {
        font-size: 1.2rem;
      }
    </style>
  </head>
  <body class="bg-light">
    <div class="container py-5">
      <h1 class="mb-4 text-primary">Citas textuales de autores</h1>

      <div class="card p-4 shadow-sm">
        <form action="/nuevo" method="POST">
          <div class="mb-3">
            <input
              type="text"
              name="autor"
              class="form-control"
              placeholder="Autor"
              required
            />
          </div>
          <div class="mb-3">
            <input
              type="text"
              name="contenido"
              class="form-control"
              placeholder="Comentario"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary">Agregar</button>
        </form>
      </div>
      <br />
      <ul class="list-group mb-4">
        <% comentarios.forEach(function(comentario) { %>
        <li class="list-group-item">
          <strong><%= comentario.autor %>:</strong> <%= comentario.contenido %>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
